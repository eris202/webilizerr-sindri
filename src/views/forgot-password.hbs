<!DOCTYPE html>
<html lang="en">

<head>
  <title>Login</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta property="og:title" content="Template Monster Admin Template">
  <meta property="og:description"
    content="brevis, barbatus clabulares aliquando convertam de dexter, peritus capio. devatio clemens habitio est.">
  <meta property="og:image" content="http://digipunk.netii.net/images/radar.gif">
  <meta property="og:url" content="http://digipunk.netii.net">
  <link rel="icon" href="images/favicon.ico" type="image/x-icon">
  <link rel="stylesheet" href="components/base/base.css">
  <link rel="stylesheet" href="components/base/alerts.css">
  <script src="components/base/core.js"></script>
  <script src="components/base/script.js"></script>
</head>

<body>
  {{> header}}
  <div class="page">
    <!-- Login form-->
    <section class="section section-one-screen section-sm overlay-dark-07 novi-background"
      data-preset='{"title":"Login","category":"one screen page, form","reload":true,"id":"login"}'>
      <div class="container">
        <div class="row justify-content-center novi-disabled">
          <div class="col-md-8 col-lg-6 col-xxl-5">
            <article class="accent-box">
              <h4 class="accent-box-title text-center">Reset Password</h4>
              {{#if message.success}}
              <div class="row justify-content-center alertCST">
                <div>
                  <div class="close-button-wrapper">
                    <div class="close-button alertCST-close"></div>
                  </div>
                  <div class="snackbar snackbar-success">
                    <div class="snackbar-inner">
                      <div class="snackbar-title"><span class="icon snackbar-icon novi-icon int-warning"></span>
                        <span class="alertCST-text">{{{message.success}}} </span>
                      </div>
                    </div>
                  </div>

                </div>
              </div>
              {{/if}}
              {{#if message.warning}}
              <div class="row justify-content-center alertCST">
                <div>
                  <div class="close-button-wrapper">
                    <div class="close-button alertCST-close"></div>
                  </div>
                  <div class="snackbar snackbar-warning">
                    <div class="snackbar-inner">
                      <div class="snackbar-title"><span class="icon snackbar-icon novi-icon int-warning"></span>
                        <span class="alertCST-text">{{{message.warning}}} </span>
                      </div>
                    </div>
                  </div>

                </div>
              </div>
              {{/if}}
              {{#if message.error}}
              <div class="row justify-content-center alertCST">
                <div>
                  <div class="close-button-wrapper">
                    <div class="close-button alertCST-close"></div>
                  </div>
                  <div class="snackbar snackbar-danger">
                    <div class="snackbar-inner">
                      <div class="snackbar-title"><span class="icon snackbar-icon novi-icon int-warning"></span>
                        <span class="alertCST-text">{{{message.error}}} </span>
                      </div>
                    </div>
                  </div>

                </div>
              </div>
              {{/if}}
              <p class="accent-box-text text-center">Then check your inbox</p>
              <div class="alerts-wrapper">
              </div>
              <form id="formCST" class="accent-box-form" action="" method="post">
                <div class="form-group">
                  <div class="input-group">
                    <div class="input-group-prepend"><span class="input-group-text int-user novi-icon"></span></div>
                    <input id="email-input" class="form-control" type="text" name="email" placeholder="Email">
                  </div>
                </div>
                <button id="sbmt-btn" class="btn btn-block btn-lg btn-primary accent-box-btn" type="submit">Reset
                  Password</button>

          </div>
        </div>


        </form>
        </article>
      </div>
  </div>
  </div>
  </section>
  </div>
  <script src="components/base/alertsReset.js"></script>

</body>

</html>