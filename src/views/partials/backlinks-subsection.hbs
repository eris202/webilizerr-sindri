<div class="clearfix"></div>
<hr class="section-line">
<div class="item py-3" id="{{this.key}}">
    <div class="item-header">
        <div class="item-title">
            <div class="title-sign">
                <div class="sign item-num {{this.passedClass}}">
                    <p>{{this.circleTextDisplay}}</p>
                </div>
                <div class="title">
                    <h3>{{this.friendlyName}}</h3>
                </div>
            </div>
            <div>
                <li class="mx-2 question" data-title="Backlinks" data-info="The backlinks score is calculated by looking at a combination of link signals. This includes the 
                overall number of backlinks together with the number of linking domains, as well as rating the overall 
                quality of the backlinks pointing to a website. The quality assessment is based on the linking
                    pages. We've detected
                    {{#each this.data}}
                    {{#ifeq @key 'backlinks'}}
                    {{this}}
                    {{/ifeq}}
                    {{/each}}
                    backlinks pointing to your site. Backlinks are links that point to your website from other websites.
                    They are like letters of recommendation for your site.">
                    <a class="hov-c-b d-i-b">
                        What is this?</a></li>
                <div class="item-section">{{this.section}}</div>
                {{!-- <img data-title="Title Here" data-info="Info Here" class="question" src="img/info.png" alt="Info"> --}}
            </div>
        </div>
    </div>
    <div class="item-body myt-2">
        {{#if this.passed}}
        <div class="box-wrapper">
            {{#if this.shortAnswer}}
            <div class="answer">
                <div style="margin-top: 20px;">
                    <p>
                        {{this.shortAnswer}}
                    </p>
                </div>
            </div>
            {{/if}}
        </div>
        {{else}}
        {{#if this.shortAnswer}}
        <div class="box-wrapper">
            <div class="answer">
                <div style="margin-top: 20px;">
                    <p>
                        {{this.shortAnswer}}
                    </p>
                </div>
            </div>
        </div>
        {{/if}}
        {{#if this.recommendation}}
        <div class="box-wrapper" style="margin-top: 50px;">
            <div class="info">
                <div><img src="img/info2.png" alt="recommendation"></div>
                <div style="margin-top: 20px;">
                    <p>
                        Recommendation: <br> {{this.recommendation}}
                    </p>
                </div>
            </div>
        </div>

        {{/if}}
        {{/if}}



        {{#if this.data}}
        {{#ifObject this.data}}
        <div class="box-wrapper" style="margin-top: 20px;">
            <div class="info">


                <div><img style="" src="img/info2.png" alt="data"></div>


                <ul>
                    {{#each this.data}}

                    <li>
                        {{#ifeq @key 'backlinks'}}
                        Page has total of {{this}} backlinks.
                        {{/ifeq}}

                    </li>

                    {{/each}}
                    <p>Backlink data provided by <a href="https://moz.com/"><u><strong>Moz</strong></u></a></p>
                </ul>
            </div>
        </div>
        {{/ifObject}}
        {{/if}}
    </div>
</div>